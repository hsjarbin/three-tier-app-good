# {{ ansible_managed }}

global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket /var/lib/haproxy/stats level admin
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
        timeout connect 5000
        timeout client 50000
        timeout server 50000

frontend hafrontend
    bind *:{{ http_port_frontend }}
    mode http
    default_backend app-servers

backend app-servers
    mode http
    balance roundrobin
    option forwardfor
    server app1 app1.{{GUID}}.internal:{{ http_port_backend }} cookie app1 check
    server app2 app2.{{GUID}}.internal:{{ http_port_backend }} cookie app2 check
